<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GalleryWriteActivity"
    tools:layout_editor_absoluteY="25dp"
    android:background="@android:color/white">

    <Button
        android:id="@+id/button_gallery_write_upload_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/select_rounded_photo"
        android:text="upload image"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_gallery_write_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edittext_rounded_shape_light"
        android:ems="10"
        android:gravity="top|left"
        android:hint="content"
        android:inputType="textMultiLine"
        android:maxLength="1024"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:scrollHorizontally="false"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/button_gallery_write_submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_gallery_write_upload_image" />

    <Button
        android:id="@+id/button_gallery_write_submit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:background="@drawable/button_rounded_shape"
        android:text="submit"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/editText_gallery_write_content"
        app:layout_constraintStart_toStartOf="@+id/editText_gallery_write_content" />

    <ImageView
        android:id="@+id/imageView_gallery_write_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_gallery_write_upload_image"
        app:layout_constraintEnd_toEndOf="@+id/button_gallery_write_upload_image"
        app:layout_constraintStart_toStartOf="@+id/button_gallery_write_upload_image"
        app:layout_constraintTop_toTopOf="@+id/button_gallery_write_upload_image"
        app:srcCompat="?attr/colorBackgroundFloating" />

</android.support.constraint.ConstraintLayout>